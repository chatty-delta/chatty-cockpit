[Unit]
Description=Chatty Cockpit API Server
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/projects/chatty-cockpit
ExecStart=/usr/bin/npx tsx server/index.ts
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
